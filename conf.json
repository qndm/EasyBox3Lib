{
    "source": {
        "include": [
            "lib",
            "package.json",
            "README.md",
            "changelog.md"
        ],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "encoding": "utf8",
        "readme": "./README.md",
        "destination": "docs/",
        "recurse": true,
        "verbose": true,
        "theme_opts": {
            "default_theme": "fallback-light",
            "sort": false
        }
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}
